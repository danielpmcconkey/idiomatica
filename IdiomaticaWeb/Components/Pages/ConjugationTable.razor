            var conjugations = conjugator141.Conjugate();
            conjugationTable = new (spanishVerb141, conjugations);

        }
        catch (Exception ex)
        {
            var burp = ex.ToString();
        }
    }
    private async Task ToggleTranslations()
    {
        shouldShowTranslations = !shouldShowTranslations;
    }
    
}
