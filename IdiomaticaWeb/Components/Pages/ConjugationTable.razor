            Verb spanishVerb141 = new() { Infinitive = "preferir", Core1 = "prefer", Core2 = "prefier", Core3 = "prefir", Gerund = "prefiriendo", PastParticiple = "preferido", };
            Verb englishVerb141 = new() { Infinitive = "to prefer", Core1 = "prefer", Core2 = "preferred", Core3 = "prefers", Gerund = "preferring", PastParticiple = "preferred", };
